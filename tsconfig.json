{
  "exclude": ["./dist/**/*"],
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES5"],
    "module": "CommonJS",
    "moduleResolution": "node",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "skipLibCheck": true,
    "noEmit": true
  }
}
